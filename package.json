{
  "name": "anime-dashboard",
  "version": "1.0.0",
  "description": "Anime tracking dashboard with AniList integration",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "dev:vite": "vite",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:vite\" --names \"express,vite\" --prefix-colors \"cyan,magenta\"",
    "prebuild": "node scripts/generate-config.js",
    "build": "vite build",
    "postbuild": "node scripts/generate-config.js",
    "preview": "vite preview",
    "postinstall": "npm run prisma:generate",
    "start": "node scripts/init-db.js && node server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:generate:local": "dotenv -e .env -- prisma generate",
    "prisma:push:local": "dotenv -e .env -- prisma db push",
    "prisma:studio": "dotenv -e .env -- prisma studio",
    "validate:manifest": "node scripts/validate-manifest.js",
    "list:images": "node scripts/list-images.js",
    "generate:manifest": "node scripts/generate-manifest-from-images.js",
    "organize:images": "node scripts/organize-images.js",
    "download:images": "node scripts/download-images.js",
    "convert:urls": "node scripts/convert-urls-to-json.js",
    "template:urls": "node scripts/convert-urls-to-json.js --template",
    "create:anime-list": "node scripts/create-anime-list.js",
    "fetch:character-images": "node scripts/fetch-character-images.js",
    "fetch:random-images": "node scripts/fetch-character-images.js --random",
    "fetch:multiple-images": "node scripts/fetch-multiple-images.js",
    "browse:characters": "node scripts/browse-characters.js"
  },
  "keywords": [
    "anime",
    "dashboard",
    "anilist"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.12.2",
    "chart.js": "^4.5.1",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.6.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.0"
  }
}
